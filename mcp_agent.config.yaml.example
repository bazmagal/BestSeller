# MCP Agent Configuration
# Copy this file to mcp_agent.config.yaml and add your API key
name: "main_agent_app"
description: "Main agent that orchestrates story generation using plot generator and chapter writer MCP servers"

# MCP Servers configuration
mcp:
  servers:
    plot-generator:
      command: python
      args:
        - /Users/mbaz/BestSeller/plot_generator_server.py
      env:
        ANTHROPIC_API_KEY: your-api-key-here

    chapter-writer:
      command: python
      args:
        - /Users/mbaz/BestSeller/chapter_writer_server.py
      env:
        ANTHROPIC_API_KEY: your-api-key-here
